<%= link_to notifications_path, class: "d-block" do %>
  <div class="position-relative">
    <% if unchecked_notifications.any? %>
        <i class="fas fa-bell fa-lg.fa-stack-2x" style="font-size: 1.1em;"></i>
        <i class="fas fa-circle n-circle.fa-stack-1x", style="font-size: 0.8em; position: absolute; right: -5px;"></i>
    <% else %>
        <i class="fas fa-bell fa-lg" style="font-size: 1.1em;"></i>
    <% end %>
  </div>
<% end %>