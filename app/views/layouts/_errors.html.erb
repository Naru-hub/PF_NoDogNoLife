<% if obj.errors.any? %>
  <div class="alert alert-danger">
    <div id="error_explanation">
      <h3>フォームに<%= pluralize(obj.errors.count, "個のエラーがあります") %></h3>
      <ul>
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>  
<% end %>