<div class="row my-5">
  <div class="col-5 offset-1 my-5">
    <h3>ワンちゃん登録フォーム</h3>
      <%= form_with model: @dog, local:true do |f| %>
        <div class="row">
          <div class="col-7 mt-4">
            <div class="form-group">
              <h4 class="my-4">ワンちゃんの名前</h4>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>  
        </div>  
        <div class="row">
          <div class="col-7">
            <div class="form-group">
              <h4 class="my-4">犬種</h4>
              <%= f.text_field :dog_type, class: "form-control" %>
            </div>
          </div>  
        </div> 
        <div class="row">
          <div class="col-7">
            <div class="form-group">
              <h4 class="my-4">犬のサイズ</h4>
              <%= f.select :dog_size, Post.dog_sizes.keys.map {|k| [k, k]}, {}, { class: 'form-control', style: 'margin-bottom: 15px;', data: {} } %>
            </div>
          </div>  
        </div>
        <div class="row">
          <div class="col-7">
            <div class="form-group my-4">
                <%= f.submit "登録", class: "btn btn-primary mt-3" %>
            </div>
          </div>
        </div>  
      <% end %>
  </div>
  
  <div class="col-5 my-5">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>名前</th>
          <th>犬種</th>
          <th>大きさ</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @dogs.each do |dog| %>
          <tr>
            <td></td>
            <td><%= dog.name %>ちゃん</td>
            <td><%= dog.dog_type %></td>
            <td><%= dog.dog_size %></td>
            <td><%= link_to "削除", dog_path(dog), method: :delete,class: "btn btn-danger", data: { confirm: "本当にワンちゃん情報を削除しますか？" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>