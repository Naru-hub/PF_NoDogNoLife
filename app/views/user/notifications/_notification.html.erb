<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class="col-md-6.mx-auto">
  <div class="form-inline">
    <span>
      <%= link_to user_path(visitor) do %>
        <%= attachment_image_tag visitor, :profile_image, fallback: "no_image.jpg", size: "40x40", class: "rounded-circle" %>
          <strong><%= visitor.name %></strong>
        <%= 'さんが' %>
      <% end %>
    </span>
  </div>
</div>
      <% case notification.action %>
      <% when 'follow' then %>
        <%= "あなたをフォローしました" %>
      <% when 'like' then %>
        <%= link_to 'あなたの投稿', notification.post, style: "font-weight: bold;" %>
          <%= "にいいねしました" %>
      <% when 'comment' then %>
        <% if notification.post.user_id == visited.id %>
          <%= link_to "あなたの投稿", notification.post, style: "font-weight: bold;" %>
        <% else %>
          <span>
            <%= link_to post_path(notification.post) do %>
              <%= attachment_image_tag visitor, :profile_image, fallback: "no_image.jpg", size: "40x40", class: "rounded-circle" %>
                <strong><%= notification.post.user.name + 'さんの投稿' %></strong>
            <% end %>
            <%= "にコメントしました" %>
          </span>
        <% end %>
        <p class="text-muted.mb-0">
          <%= PostComment.find_by(id: notification.post_comment_id)&.comment %>
        </p>
      <% end %>

  <div class="small.text-muted.text-right"></div>
    <%= time_ago_in_words(notification.created_at).upcase %>
  <hr>