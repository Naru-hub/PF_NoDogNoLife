  <!--投稿一覧-->
  <% posts.each do |post| %>
      <div class="col-sm-9 offset-sm-2 col-md-3 offset-md-0">
        <div class="card-link my-3">
          <div class="card my-3 mx-2">
            <%= link_to post_path(post), style: "color: black;" do %>
              <%= attachment_image_tag post, :image, fallback: "no_image.jpg", size: "200x250", class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= post.place %></h5>
                <p class="card-text"><%= post.introduction %></p>
            <% end %>
                <p class="card-text pt-2"><i class="far fa-comment-dots"></i><%= post.post_comments.count %></p>
                <p class="card-text my-0">
                  <% if user_signed_in? %>
                    <div id="favorite-btn<%= post.id %>">
                      <%= render 'user/favorites/favorite_btn', post: post %>
                    </div>
                  <% end %>
                </p>
                <p class="card-text"><small class="text-muted"><%= post.created_at.strftime('%Y/%m/%d') %></small></p>
              </div>
          </div>
        </div>
      </div>
  <% end %>