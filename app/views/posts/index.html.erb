
    <div class="card-group">
      <div class="row row-cols-1 row-cols-md-5 g-6">
          <% @posts.each do |post| %>
            <div class="col mx-0 px-0">
              <div class="card">
                <%= link_to post_path(post), style: "color: black;" do %>
                  <%= attachment_image_tag post, :image, fallback: "no_image.jpg", size: "300x200", class: "card-img-top" %>
                  <div class="card-body">
                    <h5 class="card-title"><%= post.place %></h5>
                    <p class="card-text"><%= post.introduction %></p>
                    <p class="card-text"><small class="text-muted"><%= post.created_at.strftime('%Y/%m/%d') %></small></p>
                  </div>
                <% end %>
              </div>  
            </div>  
          <% end %>
      </div> 
    <p>ああああああ</p>  
    </div>

  