<div class="row">
  <div class="col-2 offset-10 mt-3 mb-2">
    <%= form_with(url: search_posts_path,method: :get, local: true, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "住所、place名を入力", class: "search-input" %>
      <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "すべて", required: "required" %>
      <%= form.select :dog_size, Post.dog_sizes.map {|k, v| [k, v]}, {} %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
  </div>
</div>
<div class="row row-cols-1 row-cols-md-5 g-6">
    <% @posts.each do |post| %>
      <div class="col">
          <div class="card my-3 mx-2">
            <%= link_to post_path(post), style: "color: black;" do %>
              <%= attachment_image_tag post, :image, fallback: "no_image.jpg", size: "200x200", class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= post.place %></h5>
                <p class="card-text"><%= post.introduction %></p>
            <% end %>
                <p class="card-text"><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
                <p class="card-text"><small class="text-muted"><%= post.created_at.strftime('%Y/%m/%d') %></small></p>
              </div>
        </div>
      </div>
    <% end %>
</div>
<div class="row my-3">
  <div class="col-4"></div>
  <div class="col-5 offset-1"><%= paginate @posts %></div>
</div>




