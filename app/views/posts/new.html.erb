<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-6 mx-auto py-5">
    <h1>New投稿フォーム</h1>
      <%= form_with model: @post, local:true do |f| %>

        <div class="form-group">
          <h4>画像</h4>
          <%= f.attachment_field :image, class: "form-control-file", size: "100x100", fallback: "no-image.png" %>
        </div>

        <div class="form-group">
          <h4>カテゴリー</h4>
          <%= f.collection_select :category_id, Category.all, :id, :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <h4>place名</h4>
          <%= f.text_field :place, class: "form-control" %>
        </div>

        <div class="form-group">
          <h4>住所</h4>
          <%= f.text_field :address, class: "form-control" %>
        </div>

        <div class="form-group">
          <h4>説明</h4>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <div class="form-group">
          <h4>犬のサイズ</h4>
          <%= f.select :dog_size, Post.dog_sizes.keys.map {|k| [k, k]}, {}, { class: 'form-control', style: 'margin-bottom: 15px;', data: {} } %>
        </div>

        <div class="form-group">
          <%= f.submit "新規投稿", class: "btn btn-primary mt-3" %>
        </div>

      <% end %>
  </div>
</div>