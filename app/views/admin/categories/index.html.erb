<div class="row my-5">
  <div class="col-md-3 offset-1 my-5">
    <%= form_with model: [:admin, @category], local: true do |f| %>
      <div class="form-group my-5">
        <h4 class="my-5">カテゴリー名</h4>
          <%= f.text_field :name, class: "form-control my-3" %>
          <%= f.submit '新規登録', class: 'btn btn-create my-3' %>
      </div>  
    <% end %>
  </div>
  <div class="col-md-5 offset-1">
    <table class="table">
      <tr>
        <th></th>
        <th>カテゴリー名</th>
        <th></th>
      </tr>
        <% @categories.each do |category| %>
      <tr>
        <td></td>
        <td><%= category.name %></td>
        <td><%= link_to "削除する", admin_category_path(category), method: :delete, class: 'btn btn-delete btn-sm', data: { confirm: "本当にカテゴリー名を削除しますか？" } %></td>
      </tr>    
        <% end %>
    </table>    
  </div>
</div>