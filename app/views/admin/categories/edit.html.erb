  <div class="row my-5">
    <div class="col-md-9 offset-2">
      <div class="col-md-3 offset-3 my-5">
        <%= render 'layouts/errors', obj: @category %>
          <h2>カテゴリー編集</h2>
            <%= form_with model: [:admin, @category], local: true do |f| %>
              <div class="form-group my-5">
                <h4 class="my-5">カテゴリー名</h4>
                  <%= f.text_field :name, class: "form-control my-3" %>
                  <%= f.submit '編集', class: 'btn btn-edit my-3' %>
              </div>  
            <% end %>
      </div>
      <div class="col-md-3"><%= link_to "一覧へ戻る", admin_categories_path, class: "btn btn-sign-in" %></div>
    </div>  
  </div>    