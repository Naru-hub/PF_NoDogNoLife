<div class="row">
  <div class="col-md-10 col-lg-12 offset-md-2 my-5">
    <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "200x200", class: "rounded-circle" %>
  </div>
  <div class="col-md-10 col-lg-10 offset-md-1 my-5">
    <div class="row mb-4">
          <div class="col-md-3">名前</div>
          <div class="col-md-3"><%= @user.name %></div>
          <div class="col-md-3">email</div>
          <div class="col-md-3"><%= @user.email %></div>
    </div>
    <div class="row mb-4">
      <div class="col-md-3">フォロー数</div>
      <div class="col-md-3"><%= @user.followings.count %></div>
      <div class="col-md-3">フォロワー数</div>
      <div class="col-md-3"><%= @user.followers.count %></div>
    </div>

    <div class="row mb-4">
      <%= form_with model: [:admin, @user], local:true, method: :patch do |f| %>
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-10">会員ステータス</div>
            <div class="col-md-4">
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効", value:false %>
            </div>
            <div class="col-md-4">
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会", value:true %>
            </div>
            <div class="col-md-4">
              <%= f.submit "変更を保存", class: "btn btn-delete btn-sm" %>
            </div>
          </div>
          <div class="col-md-４">通報した投稿数 : <%= @user.reports.count %></div>
        </div>

      <% end %>
    </div>
  </div>