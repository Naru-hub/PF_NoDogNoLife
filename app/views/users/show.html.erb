<div class="row">
  <div class="col-4 offset-1 mt-5 pt-5">
    <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "200x200", class: "rounded-circle" %>
      <div class="row mt-5">
        <div class="col-4">
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-edit"></i>
          <% end %>
          <%= link_to dog_path(@user.dogs), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-paw"></i>
          <% end %>
        </div>
      </div>
  </div>
  <div class="col-6 offset-1">
     <table class="table">
      <tr>
        <td style="width: 20%" >名前</td>
        <td style="width: 80%"><%= @user.name %></td>
      </tr>
      <% @dogs.each do |dog| %>
        <tr>
          <td style="width: 20%">ワンちゃんの名前</td>
          <td style="width: 80%"><%= dog.name %></td>
        </tr>
        <tr>
          <td style="width: 20%">犬種</td>
          <td style="width: 80%"><%= dog.dog_type %></td>
        </tr>
      <% end %>  
    </table>
  </div>
</div>
