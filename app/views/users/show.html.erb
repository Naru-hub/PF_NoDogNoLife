<div class="row">
  <div class="col-4 offset-1 my-5">
    <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "200x200", class: "rounded-circle" %>
      <div class="row mt-5">
        <div class="col-4 my-4">
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-edit"></i>
          <% end %>
        </div>
      </div>  
      <div class="row mt-2">
        <div class="col-4 mb-4">
          <%= link_to dog_path(@dogs), class: "btn btn-outline-info btn-block" do %>
            <i class="fas fa-paw"></i>
          <% end %>
        </div>
      </div>
  </div>
  <div class="col-6 my-5">
     <table class="table table-borderless">
        <tr>
          <td style="width: 20%" >名前</td>
          <td style="width: 80%"><%= @user.name %></td>
        </tr>
      <% @dogs.each do |dog| %>
        <tr>
          <td>ワンちゃん情報</td>
          <td><%= dog.name %>ちゃん　　<%= dog.dog_type %>　　<%= dog.dog_size %></td>
        </tr>
      <% end %>  
    </table>
  </div>
</div>
<div class="row">
  <div class="col-11 offset-1 my-2">
    <h4 class="my-2">投稿一覧</h4>
      <table class="table my-5">
        <thead>
          <tr>
            <th></th>
            <th>place</th>
            <th>住所</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @posts.each do |post| %>
          <tbody>
             <tr>
                <td><%= link_to post_path(post) do %>
                      <%= attachment_image_tag post, :image, fallback: "no_image.jpg",  size: "100x100" %>
                    <% end %>
                </td>
                <td><%= link_to post.place, post_path(post) %></td>
                <td><%= post.address %></td>
                <td></td>
                <td></td>
            </tr>
          </tbody>
        <% end %>    
      </table>
  </div>
  <div class="row my-3">
    <div class="col-5"></div>
    <div class="col-6"><%= paginate @posts %></div>
  </div>
</div>
